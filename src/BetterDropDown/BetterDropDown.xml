<?xml version="1.0" encoding="utf-8"?>
<widget id="BetterDropDown.widget.BetterDropDown" needsEntityContext="false" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Better DropDown</name>
    <description>Enhances the dropdown-searchfilters with a searchbar and an option to select all visible items.</description>
    <icon></icon>
    <properties>
        <property key="activateOnCount" type="integer" required="true" defaultValue="5">
            <caption>Minimum items</caption>
            <category>Appearance</category>
            <description>This setting defines the minimum number of items in the dropdown before the widget becomes active.</description>
        </property>
    </properties>
</widget>
